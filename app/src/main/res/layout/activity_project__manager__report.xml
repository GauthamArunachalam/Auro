<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Project_Manager.Project_Manager_Report">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Batch Report"
            android:id="@+id/batchReport"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Student Report"
            android:id="@+id/studentReport"
            android:layout_alignBottom="@id/studentReport" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Attendance Report"
            android:id="@+id/attendanceReport"
            android:layout_alignBottom="@id/studentReport" />
    </LinearLayout>

</RelativeLayout>